<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import musta.belmo.utils.fx.gui.ActionButton?>
<GridPane alignment="center" hgap="10" prefHeight="280.0" prefWidth="202.0" vgap="10" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="musta.belmo.utils.fx.controller.FxController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
        </ColumnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Pane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
                <TextArea prefHeight="165.0" prefWidth="320.0" fx:id="inputText"/>
            </children>
        </Pane>
        <ActionButton actions="DELETE_EMPTY_LINES" mnemonicParsing="false"
                      text=""
                      fx:id="btnDeleteEmptyLines"
                      onAction="#editText">

        </ActionButton>
        <Button mnemonicParsing="false" text="Capitalize" GridPane.columnIndex="1" fx:id="btnCapitalize"/>
    </children>
</GridPane>
